@model IEnumerable<Repository.Application.DataModel.BasicProductLimitHdr>

@{
    ViewBag.Title = "Index";
}

<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            <b>Basic Product Limit</b>
        </h3>
    </div>
    <div class="box-header with-border">
        <h3 class="box-title">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary", @style = "background-color:#008CBA; color:white;" })
        </h3>
    </div>

    <div class="box-body">
        <table class="table table-bordered table-striped" id="basicProductLimitTable">
            <thead>
                <tr>
                    <th>
                        BP Id
                    </th>

                    <th>
                        BP Name
                    </th>
                    <th>
                        BP Limit Id
                    </th>
                    <th>
                        Description
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasicProductId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BasicProduct.BasicProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BPLimitId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>


                    <td>

                        @Html.ActionLink("Edit", "Edit", new { id = item.BasicProductId, bpLimitId = item.BPLimitId })|
                        @Html.ActionLink("Details", "Details", new { id = item.BasicProductId, bpLimitId = item.BPLimitId }) |
                        @Html.ActionLink("Delete", "Delete", new { BasicProductId = item.BasicProductId, BPLimitId = item.BPLimitId })
                    </td>
                </tr>
                }
            </tbody>    
        </table>
    </div>
</div>

<script type="text/javascript">
    (function ($) {

        $('#basicProductLimitTable').DataTable({
            'paging': true,
            'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            'pageLength': 10,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            'scrollX': true
        });
    }(jQuery));

</script>

