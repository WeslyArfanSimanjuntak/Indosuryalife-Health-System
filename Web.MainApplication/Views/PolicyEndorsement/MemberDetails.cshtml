<div class="box box-solid">
    <div class="box-body">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab_1" data-toggle="tab">Plan</a></li>
                <li><a href="#tab_2" data-toggle="tab">PCF</a></li>
                <li><a href="#tab_3" data-toggle="tab">Claim</a></li>
            </ul>

            <div class="tab-content">
                <div class="tab-pane active" id="tab_1">
                    <div class="box-body">
                        <table class="table table-bordered table-striped" id="PlanIdTable">
                            <thead>
                                <tr>
                                    <th>Basic Product</th>
                                    <th>Basic Product Name</th>
                                    <th>Limit Code</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.MemberPlan_Endorse.Where(x => x.IsActive == 1))
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BasicProductId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BasicProduct.BasicProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.BasicProductLimitCode)
                                        <td>
                                            @Html.ActionLink("Details", "PolicyMemberBenefit", "Policy", new { id = item.BasicProductId, bpLimitId = item.BasicProductLimitCode }, htmlAttributes: new { @target = "_blank" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- / next tab-pane -->
                <div class="tab-pane" id="tab_2">
                    <div class="row">
                        <div class="box">
                            <div class="box-header">PCF</div>
                            <div class="box-body">
                                <table class="table table-bordered table-striped" id="PCFTable_@Model.EndorseNumber">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Basic Product</th>
                                            <th>Basic Product Name</th>
                                            <th>Amount</th>
                                            <th>Invoice Number</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.PCF_Endorse)
                                        {
                                            <tr>
                                                <td>
                                                    @(item.InvoiceDate.ToString("dd/MM/yyyy"))
                                                </td>
                                                <td>@item.TransType</td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BasicProductId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BasicProduct.BasicProductName)
                                                </td>

                                                <td class="text-right" format="float">
                                                    @(item.Amount.ToString().Replace(',', '.'))
                                                </td>
                                                <td>@item.TransactionNumber</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="box">
                            <div class="box-header">Administration Fee</div>
                            <div class="box-body">
                                <table class="table table-bordered table-striped" id="AddministrationFeeTable_@Model.MemberId">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Endorsement</th>
                                            <th>Type</th>
                                            <th>Amount</th>
                                            <th>Invoice Number</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (var item in Model.AdministrationFeeEndorsement)
                                            {
                                        <tr>
                                            <td>@(item.InvoiceDate.ToString("dd/MM/yyyy"))</td>
                                            <td>@item.EndorseNumber</td>
                                            <td>@item.Type</td>
                                            <td class="text-right" format="float">
                                                @(item.Amount.ToString().Replace(',', '.'))
                                            </td>
                                            <td>@item.TransactionNumber</td>

                                        </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- / next tab-pane -->
                <div class="tab-pane" id="tab_3">
                    <div class="box-body">
                        Under Construction
                    </div>
                </div>


            </div>
        </div>

        @*Button Create and Back*@
        <div class="form-group">
            <div class="form-group">
                <div class="col-md-2">
                    @Html.ActionLink("Back", "Details", "policyendorsement", new { @id = Model.EndorseNumber.ToString(), @tab = "member" }, new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    </div>
</div>



<script>
    //$('#CreatedDate').datepicker({
    //    dateFormat = ("DD/MM/YYYY")
    //});

    $('#PCFTable_@Model.EndorseNumber').DataTable({
        'paging': true,
        'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
        'pageLength': -1,
        'searching': true,
        'ordering': true,
        'info': true,
        'autoWidth': false,
        'scrollX': true
    });
    $('#AddministrationFeeTable_@Model.MemberId').DataTable({
        'paging': true,
        'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
        'pageLength': -1,
        'searching': true,
        'ordering': true,
        'info': true,
        'autoWidth': false,
        'scrollX': true
    });
</script>