@model IEnumerable<Repository.Application.DataModel.BasicProduct>

@{
    ViewBag.Title = "Index";
}
<script src="bootstrap-confirm-delete.js"></script>

<div class="box box-solid">
    <div class="box-header with-border">
        <h3 class="box-title">
            <b> Basic Product </b>  
        </h3>
    </div>
    <div class="box-header with-border">
        <h3 class="box-title">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary", style = "background-color:#008CBA; color:white;" })
        </h3>
    </div>
    <div class="box-body">
        <table class="table table-bordered table-striped" id="BasicProductTable">
            <thead>
                <tr>


                    <th>
                        BP Id
                    </th>
                    <th>
                        Basic Product Name
                    </th>
                    <th>Description</th>
                    <th>
                        Status
                    </th>

                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicProductId)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.BasicProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicProductDesc)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.BasicProductId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.BasicProductId }) 
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.BasicProductId })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    (function ($) {

        $('#BasicProductTable').DataTable({
            'paging': true,
            'lengthMenu': [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
            'pageLength': 10,
            'searching': true,
            'ordering': true,
            'info': true,
            'autoWidth': false,
            'scrollX': true
        });
    }(jQuery));


</script>